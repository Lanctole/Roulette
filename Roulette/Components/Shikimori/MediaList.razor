@using ShikimoriSharp.Bases
@using Roulette.Services
@using ShikimoriSharp.Classes
@using Games.Classes
@using Roulette.DTOs
@using Roulette.Models
@inject IJSRuntime JS
@inject UserChoiceHistoryService UserChoiceHistoryService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<IdentityUser> UserManager
@typeparam T

@if (MediaItems != null && MediaItems.Any())
{
    object? selectedMediaItem = null;
    foreach (var mediaItem in MediaItems)
    {
        if (mediaItem is SmallRepresentation smallRep && smallRep.Id == SelectedID)
        {
            selectedMediaItem = smallRep;
            break;
        }
        else if (mediaItem is GameDto gameDto && gameDto.AppID == SelectedID)
        {
            selectedMediaItem = gameDto;
            break;
        }
    }

    if (selectedMediaItem != null)
    {
        <MediaComponent Item="selectedMediaItem" />
    }
}

