@using ShikimoriSharp.Enums
@using Roulette.Models


<EnumSelector TEnum="Duration"
              Placeholder="Выберите длительность"
              @bind-SelectedValues="@_selectedDurationValues" />

@code {
    private IEnumerable<string> _selectedDurationValues = new List<string>();
}
@code {

    private List<LabeledValue> _options;
    private IEnumerable<string> _selectedValues = new List<string>();

    protected override void OnInitialized()
    {
        _options = Enum.GetValues(typeof(Duration))
            .Cast<Duration>()
            .Select(e => new LabeledValue(e.ToString(), e.ToString()))
            .ToList();
    }
}
